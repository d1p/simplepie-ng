<?php

if (isset($_GET['id']) && is_numeric($_GET['id'])) {
    require_once("FeedWriter.php");
    mysql_connect('localhost', 'root', 'hom8Aepi');
    mysql_select_db('flavors_movies');
    $id = trim($_GET['id']);
    $r = mysql_query("SELECT * FROM movies WHERE id='$id'");
    $data = mysql_fetch_assoc($r);
    //print_r($data);
    $self_url = 'http://' . $_SERVER['HTTP_HOST'] . $_SERVER['REQUEST_URI'];
    $feed = new FeedWriter(
        $data['movie_name'], //Feed Title
        $data['title'], //Feed Description
        $self_url, //Feed Link
        6, //indent
        true, //Use CDATA
        'utf-8', //encoding
        true //enable validation
    );
    //$feed->debug = true;
    $format = RSS_2_0;
    $feed->set_language($data['lang']);
    $feed->set_selfLink($self_url);
    $feed->set_feedConstruct($format);
    $feed->feed_construct->construct['itemContent']['type'] = 'html';
    $add = '<br /><br /><img src="http://c.hit.ua/hit?i=80615&amp;g=0&amp;x=2" border="0"/><p align="center"><a href="'.$data['link'].'">
    <img src="http://dpil3be8rklim.cloudfront.net/d/button.png" alt="" width="325" height="80" /></a></p>';

    $feed->add_item($data['title'], $data['desc'] . $add, $data['link']);
    $feed->set_date(date('c'), DATE_UPDATED);
    echo $feed->getXML($format);
}

