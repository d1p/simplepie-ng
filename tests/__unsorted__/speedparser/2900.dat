		dp.SyntaxHighlighter.ClipboardSwf = "http://www.nixonmcinnes.co.uk/wp-content/plugins/dp.SyntaxHighlighter/flash/clipboard.swf";
				dp.SyntaxHighlighter.HighlightAll("code");
			</script></p>
