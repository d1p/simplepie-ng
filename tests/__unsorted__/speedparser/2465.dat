<param name="allowfullscreen" value="true" />
<param name="allowscriptaccess" value="always" />
<param name="movie" value="http://vimeo.com/moogaloop.swf?clip_id=25268139&amp;server=vimeo.com&amp;loop=0&amp;fullscreen=1&amp;autoplay=0" />
