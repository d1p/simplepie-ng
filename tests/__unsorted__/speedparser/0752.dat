    <link>http://blogs.oracle.com/ideas/entry/ws_federation_is_adopting_saml</link>
        <pubDate>Wed, 29 Oct 2008 06:59:39 -0500</pubDate>
    <category>OpenSSO</category>
    <category>opensso</category>
    <category>saml</category>
    <category>samlv2</category>
